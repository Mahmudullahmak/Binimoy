<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddLostItem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:id="@+id/add_loast_imageId"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Add photo"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:id="@+id/add_photo_lostButton"
            />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What did you found?"
                android:textStyle="bold"
                android:textSize="16dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="only name.. "
                android:id="@+id/lostproduct_name"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Where did you found?"
                android:textStyle="bold"
                android:textSize="16dp"
                />

            <EditText
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="write here... "
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:id="@+id/lost_where_foundId"

                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="your phone no.."
                android:id="@+id/lost_userPhoneNoId"
                android:inputType="numberDecimal"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post"
                android:textAllCaps="false"
                android:id="@+id/lost_postButtonId"
                android:layout_gravity="end"
                />
        </LinearLayout>


    </LinearLayout>



</ScrollView>